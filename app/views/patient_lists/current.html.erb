<%= render 'select_ward' %>
<h2>Current Patient List</h2>

<% if ward %>
  <h2><%= ward %> Patients</h2>
<% else %>
  <h2>All Patients</h2>
<% end %>

<table>
    <thead>
      <th>ward</th>
      <th>hospno</th>
      <th>name</th>
      <th>birthdate</th>
      <th>sex </th>
      <th>pmh</th>
      <th>allergies</th>
    </thead>
  <tbody>
    <% patients.each do |patient| %>
      <tr>
        <td><%= patient.ward %></td>
        <td><%= patient.hospno %></td>
        <td><%= patient.name %></td>
        <td><%= patient.birthdate %></td>
        <td><%= patient.sex %></td>
        <td><%= patient.pmh %></td>
        <td><%= patient.allergies %></td>
      </tr>
    <% end %>
  </tbody>
</table>


