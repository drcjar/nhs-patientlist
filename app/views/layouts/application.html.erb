  <head>
    <title><%= content_for?(:title) ? yield(:title) : "NHS Patient List" %></title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!--[if lt IE 7]><p class=chromeframe>Please <a href="http://www.google.com/chromeframe/?redirect=true">install Chrome Frame</a>, a plugin from Google, to use this site.</p><![endif]-->
    <nav class="navbar navbar-fixed-top">
      <div class="navbar-inner">
      <div class="container">
        <% if user_signed_in? %> 
          <ul class="nav pull-left">
            <li><%= link_to "Home",  root_path %></li>
            <li><%= link_to "Teams", teams_path %></li>
          </ul>
          <ul class="nav pull-right">
            <li><p class="navbar-text"><%= current_user.email %></p></li>
            <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
          </ul>
        <% end %>
      </div>
      </div>
    </nav> <!-- /navbar -->
    
    <div class="row">
      <div class="span10 offset1">
        <% flash.each do |key, value| %>
          <p class="flash messages alert" id="flash_<% key %>"><%= value %></p>
        <% end %>
      </div>
    </div>

    <div class="container">
      <div class="header row">
        <div class="span2"><h1>Patients</h1></div>
        <div class="span8"><h1>My List</h1></div>
        <div class="span2"><h1>Handover</h1></div>      
      </div>

      <div class="filterbar row">
        <div class="span2"><%= select_tag "patient_filter" %></div>
        <div class="span8"><%= select_tag "list_filter" %></div>
        <div class="span2"><%= select_tag "handover_filter" %></div>      
      </div>

      <div class="row">
        <div id="leftbar" class="span2">
          <ul>
            <% Patient.order(:lastname).each do |patient| %>
              <li><%= patient.name %></li>
            <% end %>
          </ul>
        </div>

        <div id="main" class="span8">
          <%= yield %>
        </div>

        <div id="rightbar" class="span2">
          <% Team.all.each do |team| %>
            <p><%= team.name %></p>
          <% end %>
          <button>Add Team</button>
        </div>
      </div>
    </div>
 
    <!-- underscore templates with alternate {{}} interpolation -->
    <script type="text/template" id="alert">
    
    </script>
    <script type="text/template" id="patient-list">
    
    </script>
    <script type="text/template" id="patient-helper">
      <div data-patient-id="{{ patientId }}" class="dragging"></div>
    </script>
  </body>
</html>
