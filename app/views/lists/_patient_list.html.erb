<div class="list-item patient full">
    <div class="risk-level">
      <div class="radio-group">
        <%= radio_button_tag "#{patient.hospno}_risk_level", 'high' %>
        <%= label_tag "High" %>
      </div>
      <div class="radio-group">
        <%= radio_button_tag "#{patient.hospno}_risk_level", 'medium' %>
        <%= label_tag "Medium" %>
      </div>
      <div class="radio-group">
        <%= radio_button_tag "#{patient.hospno}_risk_level", 'low', true %>
        <%= label_tag "Low" %>
      </div>
    </div>

    <div class="patient-name">  
      <p>
        <%= patient.firstnames %> <%= patient.lastname.capitalize %>
      </p>
      <p>
        Hospital Number
        <br/>
        <%= patient.hospno %>
      </p>
      <p>
        <%= form_tag membership_path, :method => :delete do %>
          <%= hidden_field_tag :patient_id, patient.id %>
          <%= hidden_field_tag :patient_list_id, patient_list.id %>
          <%= submit_tag "Remove from list" %>
        <% end %>
      </p>
    </div>

    <div class="ward">
      <p>
        <%= patient.current_ward %>
      </p>      
    </div>

    <div class="task-list">
      <% patient.to_do_items.where(:status => "todo").each do |item| %>
        <div>
          <%=check_box_tag "to_do_item_#{item.id}_checked" %> <%= item.description %>
        </div>
      <% end %> 
      <%= submit_tag "Add Task" %>
    </div>
</div>
